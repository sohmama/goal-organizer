<div class='goal-form'>
  <h1>新規目標</h1>
  <%=form_with model: @goal, local: true do |f|%>
    <div class='goal-form__field'>
      <div class='goal-form__field--left'>
        <%= f.label :目標, class: 'goal-form__label'%>
      </div>
      <div class='goal-form__field--right'>
        <%= f.text_field :title, class: 'goal-form__input', placeholder: '目標を入力してください'%>
      </div>
    </div>
    <div class='goal-form__field'>
      <div class='goal-form__field--left'>
        <%= f.label :内容, class: 'goal-form__label'%>
      </div>
      <div class='goal-form__field--right'>
        <%= f.text_field :content, class: 'goal-form__input', placeholder: '目標の内容を入力してください'%>
      </div>
    </div>
    <div class='goal-form__field'>
      <div class='goal-form__field--left'>
        <%= f.label :期限, class: 'goal-form__label'%>
      </div>
      <div class='goal-form__field--right'>
        <%= f.text_field :deadline, class: 'goal-form__input', placeholder: '目標の内容を入力してください'%>
      </div>
    </div>

    <div class='goal-form__field'>
      <div class='goal-form__field--left'></div>
      <div class='goal-form__field--right'>
        <%= f.submit class: 'goal-form__action-btn'%>
      </div>
    </div>
  <% end %>
</div>